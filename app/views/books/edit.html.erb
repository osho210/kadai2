<h1>Editing Book</h1>
<!--errがある場合表示-->
<% if @updateBook.errors.any? %>
  <div id="error_explanation">
    <h2><%= @updateBook.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @updateBook.errors.full_messages.each do |message| %>
          <li><%= message%></li>
        <% end %>
      </ul>
  </div>
<% end %>

<!--記述処理-->
<%= form_with model: @book , url: update_book_path(@book.id), method: :patch do |f|%>
  <!--新規記述-->
  <div class="field">
    <div class="<%= ' field_with_error' if @updateBook.errors.any? %>">
      <label for="book_title">Title</label>
    </div>
    <div class="<%= ' field_with_error' if @updateBook.errors.any? %>">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="field">
    <div class="<%= ' field_with_error' if @updateBook.errors.any? %>">
       <label>Body</label>
    </div>
    <div class="<%= ' field_with_error' if @updateBook.errors.any? %>">
       <%= f.text_area :body %>
    </div>
  </div>
  <div class="action">
    <%= f.submit 'Update Book'%>
  </div>
<% end %>



